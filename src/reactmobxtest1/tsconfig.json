{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "experimentalDecorators": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es6"
    },
    "exclude": [
        "node_modules",
        "wwwroot"
    ]
}