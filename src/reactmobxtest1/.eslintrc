{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "plugins": [
        "react"
    ],
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "rules": {
        // Vi har både single och double quotes för strängar.
        // Finns det någon anledning att välja?
        "quotes": [2, "single"],
        // Tillåt avslutande komma för att kunna lägga till i
        // listor med färre berörda rader
        "comma-dangle": [0],
        "no-underscore-dangle": [0],
        "eol-last": [0],
        // Borde no-unused-vars fel...men har för många just
        // nu för att aktivera
        "no-unused-vars": 1,
        // Vi bör använda log-metoder istället för console.log
        "no-console": 0,
        "indent": [2, 4, {"SwitchCase": 1}],
        "camelcase": [2],
        "no-trailing-spaces": 2,
        "spaced-line-comment": 0,
        "no-multiple-empty-lines": [2, { "max": 2 }],
        "no-throw-literal": 2,
        "new-cap": 0,
        "consistent-return": 0,
        "no-useless-escape": 1,
        "max-statements-per-line": [2, { "max": 1 }],
        "no-duplicate-imports": [2, { "includeExports": true }],

        "react/display-name": 0,
        "react/forbid-prop-types": 0,
        "react/jsx-boolean-value": 0,
        "react/jsx-closing-bracket-location": 0,
        "react/jsx-curly-spacing": [1, "never"],
        "react/jsx-equals-spacing": [2, "never"],
        "react/jsx-handler-names": 0,
        "react/jsx-indent-props": [0, 4],
        "react/jsx-indent": [2, 4],
        "react/jsx-key": 1,
        "react/jsx-max-props-per-line": 0,
        "react/jsx-no-bind": 0,
        "react/jsx-no-duplicate-props": 2,
        "react/jsx-no-literals": 0,
        //"jsx-no-target-blank": 1, // New in eslint-react 5.1
        "react/jsx-no-undef": 2,
        "react/jsx-pascal-case": 0,
        "react/jsx-quotes": 0,
        "react/jsx-sort-props": 0,
        "react/jsx-space-before-closing": 0,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/no-danger": 1,
        "react/no-deprecated": 1,
        "react/no-did-mount-set-state": 0,
        "react/no-did-update-set-state": 1,
        "react/no-direct-mutation-state": 0,
        "react/no-is-mounted": 1,
        "react/no-multi-comp": 0,
        "react/no-set-state": 0,
        "react/no-string-refs": 0,
        "react/no-unknown-property": 1,
        "react/prefer-es6-class": 0,
        "react/prefer-stateless-function": 0,
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 2,
        "react/require-extension": 0,
        "react/self-closing-comp": 1,
        "react/sort-comp": 0,
        "react/sort-prop-types": 0,
        "react/wrap-multilines": 1
    }
}